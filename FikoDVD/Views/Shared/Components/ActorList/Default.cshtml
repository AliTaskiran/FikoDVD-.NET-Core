@using EntityLayer.Concrete
@model List<Actor>
<h3 class="text-2xl font-bold mb-4">Actors</h3>
<div class="overflow-x-auto mb-8">
    <table class="min-w-full bg-white shadow-md rounded">
        <thead class="bg-gray-800 text-white">
            
            <tr>
                <th class="px-4 py-2">ID</th>
                <th class="px-4 py-2">Category Name</th>
                <th class="px-4 py-2">Description</th>
                <th class="px-4 py-2">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr class="border-b hover:bg-gray-100">
                <td class="px-4 py-2">@item.ActorId</td>
                <td class="px-4 py-2">@item.Name</td>
                <td class="px-4 py-2">Fast-paced and exciting movies.</td>
                <td class="px-4 py-2">
                    <button class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded">Edit</button>
                    <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded">Delete</button>

                </td>
            </tr>
            }
        </tbody>
    </table>
    <button class="bg-green-500 hover:bg-red-600 text-white px-4 py-2 mt-2 rounded">Add</button>
</div>