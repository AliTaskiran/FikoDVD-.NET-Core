@model EntityLayer.Concrete.Admin
@{
    ViewData["Title"] = "Edit Admin";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Edit Admin</h1>
<div class="max-w-lg mx-auto bg-white p-6 shadow-md rounded-lg">
    @using (Html.BeginForm("EditAdmin", "Admin", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.AdminId)

        <!-- Username -->
        <div class="mb-4">
            <label for="UserName" class="block text-gray-700 font-bold mb-2">Username</label>
            @Html.TextBoxFor(x => x.UserName, new { @class = "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" })
            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-red-500" })
        </div>

        <!-- Password -->
        <div class="mb-4">
            <label for="Password" class="block text-gray-700 font-bold mb-2">Password</label>
            @Html.PasswordFor(x => x.Password, new { @class = "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" })
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-red-500" })
            <small class="text-gray-500">Leave empty to keep current password</small>
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
            <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Save Changes
            </button>
        </div>
    }
</div>