@model EntityLayer.Concrete.Actor
@{
    ViewData["Title"] = "Edit Actor";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h1 class="text-2xl font-bold mb-6 text-center text-gray-800">Edit Actor</h1>

<div class="max-w-lg mx-auto bg-white p-6 shadow-md rounded-lg">
    @using (Html.BeginForm("EditActor", "Actor", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.ActorId) <!-- Actor ID'yi gizli bir input olarak gönderiyoruz -->
        <!-- Name -->
        <div class="mb-4">
            <label for="Name" class="block text-gray-700 font-bold mb-2">Actor Name</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" })
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
            <button type="submit" class="bg-indigo-500 hover:bg-indigo-600 text-white font-bold py-2 px-6 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                Save Changes
            </button>
        </div>
    }
</div>
